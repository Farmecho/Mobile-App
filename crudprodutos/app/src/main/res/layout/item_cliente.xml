<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/nomeCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Cliente"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cnpjCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CNPJ do Cliente"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/descricaoCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição do Cliente"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/enderecoCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereço do Cliente"
        android:textSize="14sp" />

    <!-- Botões -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/btnExcluir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excluir"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white" />



    </LinearLayout>
</LinearLayout>
